{
    "manifest_version": 3,
    "name": "Productivity Timer with Website Blocker",
    "version": "1.0",
    "description": "A Pomodoro timer with a website blocker to enhance productivity.",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}
